%html
%head
  %title RailsBoilerplate
  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tags
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  = yield :head
%body
  -##fb-root For Facebook API, if needed
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner{:style => "height:40px;"}
      .container{:style => "height:40px;"}
        %a.navbar-brand{:href => "#"} 
          Rails Boilerplate 
        .nav-collapse.collapse
          %ul.nav.navbar-nav
            %li 
              %a{:href => "https://github.com/CrossTheStreams/rails_boilerplate", :target => "_blank"} 
                GitHub Repo
  .container{:style => "margin-top:50px;"}
    %h1 Hello there!
    = yield 
